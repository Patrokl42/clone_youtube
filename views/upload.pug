extends layouts/main

block content
    block content
        .form-container
            form(action=`/videos/${routes.uploadVideo}`, method="POST", enctype='multipart/form-data')
                label(for="file") Video File
                input(type="file", name="videoFile", id="file", required=true, accept='video/*')
                input(type="text", placeholder="title", name="title", required=true)
                input(type="text", placeholder="Description", name="description", required=true)
                input(type="submit", value="Upload Video")